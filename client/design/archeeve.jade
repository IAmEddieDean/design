extends ../index
block content
  #archeeve
    #coffee
      a(href='/design/archeeve.html')
        img#logo(src='/assets/logo.png')
      a(href='http://onepagelove.com/archeeve')
        img#award(src='/assets/one-page-love-award-right.png')
      div#hero-content
        div#head: p THE MOST USEFUL APP TO ORGANIZE YOUR BOOKMARKS
        div#os
            div#mac1: p GET IT FOR MAC
            div: P GET IT FOR WINDOWS
        div: img#app(src='/assets/app.png')
    div#features
      div#features-content
        div#head2: p FEATURES
        div.tiles1
          div 
            i.fa.fa-search.fa-3x
          div: p SEARCH
          p#gray Search bookmarks by title or discription
        div.tiles1 
          div 
            i.fa.fa-folder-open-o.fa-3x
          div: p ORGANIZE
          p#gray Organize bookmarks with collercions and tags
        div.tiles1
          div 
            i.fa.fa-star-o.fa-3x
          div: p FAVORITES
          p#gray Find favorites bookmarks with ease
        div.tiles1
          div 
            i.fa.fa-list.fa-3x
          div: p GRID/LIST
          p#gray Switch between grid or list view
        div.tiles1
          div 
            i.fa.fa-area-chart.fa-3x
          div: p SCREENSHOTS
          p#gray Archeeve automaticlly generates screenshots of each bookmark
        div.tiles1
          div 
            i.fa.fa-user-plus.fa-3x
          div: p MULTILINGUAL
          p#gray Archeeve speaks in your language*
        div.tiles1
          div 
            i.fa.fa-refresh.fa-3x
          div: p SYNC
          p#gray Sync your bookmarks with <span>Pocket</span>
        div.tiles1
          div 
            i.fa.fa-arrows-h.fa-3x
          div: p IMPORT/EXPORT
          p#gray Import/Export of bookmark files            
        div#lang 
          P#gray <span>*</span> English, Polish, German, Spanish, Portuguese, Turkish, Dutch, French
    div#screenshots
      div#screenshots-content
        div#head3: p SCREENSHOTS
          div#tiles
            img.tiles2(src="/assets/archeeve1.png")
            img.tiles2(src="/assets/archeeve2.png")
            img.tiles2(src="/assets/archeeve3.png")  
            img.tiles2(src="/assets/archeeve4.png")
            img.tiles2(src="/assets/archeeve5.png")
            img.tiles2(src="/assets/archeeve6.png")
            img.tiles2(src="/assets/archeeve7.png")
            img.tiles2(src="/assets/archeeve8.png")
    div#buy
      div#buy-content
        div#get: p GET THE APP NOW FOR $4.99!
        div#brag: p Every transaction on <span.selz>Selz</span> happens through an encrypted HTTP Secure connection.
        div#alt
